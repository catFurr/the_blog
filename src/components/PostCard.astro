---

const { post, direction = "col" } = Astro.props

import { Image } from 'astro:assets';

const imgSrc = post.data.cover
const authorname = post.data.author
const publishDate = post.data.publishDate
const heading = post.data.title
const subheading = post.data.subheading
const tags = post.data.tags

---

<div class:list={['flex', 'flex-'+direction ]}>
    <a href="" class="basis-1/2">
        <Image src={imgSrc} alt="Cover Image" class="object-cover w-full h-full" />
    </a>
    <div class="p-3 basis-1/2 flex-initial">
        <div class="text-purple-500 text-sm">{ authorname } â€¢ { publishDate }</div>
        <a href="" class="text-lg flex">
            <div class="grow">{ heading }</div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
            </svg>
        </a>
        <div class="text-slate-500 text-sm my-2">{ subheading }</div>
        <div class="flex gap-2">
            {tags.map((tag) =>
                <div class="rounded-xl bg-purple-100 text-purple-700 text-xs py-1 px-2">
                    { tag }
                </div>
            )}
        </div>
    </div>
</div>