---

import PostCard from "./PostCard.astro"

import { getCollection } from "astro:content";
const allBlogPosts = await getCollection("blog");

---

<div class="my-8">
    <div class="text-xl mb-4 font-bold">All blog posts</div>
    <div class="grid grid-cols-3 gap-6">
        {
            allBlogPosts.slice(4).map((blog) => 
                <PostCard post={ blog } />
        )}
    </div>
</div>

<div class="flex my-5">
    <a href="" class="previous flex gap-1 ml-10">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        <div>Previous</div>
    </a>
    <div class="flex-grow justify-center text-center flex gap-2">
        <a href="" class="bg-purple-100 rounded-lg text-purple-600 px-3 py-1">1</a>
        <a href="" class="px-3 py-1">2</a>
        <a href="" class="px-3 py-1">3</a>
        <div class="px-3 py-1">...</div>
        <a href="" class="px-3 py-1">8</a>
        <a href="" class="px-3 py-1">9</a>
        <a href="" class="px-3 py-1">10</a>
    </div>
    <a href="" class="next flex gap-1 mr-10">
        <div>Next</div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
    </a>
</div>