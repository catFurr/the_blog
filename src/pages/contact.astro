---

import CommonHead from '@components/CommonHead.astro'
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import EmailSubscribe from '@components/EmailSubscribe.astro'

import PostCard from "@components/PostCard.astro"

import { getCollection } from "astro:content";
const allBlogPosts = await getCollection("blog");

---

<html lang="en">
    <head>
        <CommonHead />
    </head>

	<body background="bg-topography.svg" bgcolor="#FFFFFF" class="px-44">
		<Header />

        <EmailSubscribe />

        <div class="my-8">
            <div class="text-xl mb-4 font-bold">All blog posts</div>
            <div class="grid grid-cols-3 gap-6">
                {
                    allBlogPosts.slice(4,7).map((blog) => 
                        <PostCard post={ blog } />
                )}
            </div>
        </div>

        <Footer />
    </body>
</html>
