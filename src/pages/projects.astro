---

import CommonHead from '@components/CommonHead.astro'
import PostCard from "@components/PostCard.astro";
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"

import { getCollection } from "astro:content";
const allProjects = await getCollection("projects");

---

<html lang="en">
    <head>
        <CommonHead />
    </head>

	<body background="bg-topography.svg" bgcolor="#FFFFFF" class="px-44">
		<Header />

        <div class="my-10 py-5 border-y-2 border-gray-400 text-center">
			<h1 class="text-9xl font-bold text-black dark:text-white">
				PROJECTS
			</h1>
		</div>

        <div class="blog">
            <div class="my-8">
                <div class="text-xl mb-4 font-bold">List Project</div>
                <div class="grid grid-cols-2 grid-flow-col gap-6">
                    <PostCard post={ allProjects[0] } />
					<PostCard post={ allProjects[1] } />
                </div>
            </div>

            <PostCard post={ allProjects[2] } />

            <div class="my-8">
                <div class="grid grid-cols-2 grid-flow-col gap-6">
                    <PostCard post={ allProjects[3] } />
					<PostCard post={ allProjects[4] } />
                </div>
            </div>

        </div>

        <Footer />
    </body>
</html>
